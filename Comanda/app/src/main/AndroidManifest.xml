<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.wp.comanda">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTheme">

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CardapioActivity" />
        <activity android:name=".MesaActivity" />
        <activity android:name=".NovoPedidoActivity" />
        <activity android:name=".PrincipalActivity" />
        <activity android:name=".CartaoActivity" />
        <activity android:name=".QuantidadeActivity" />
        <activity android:name=".CategoriaActivity" />

    </application>

</manifest>